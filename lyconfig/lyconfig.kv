#: kivy 1.7.2
#:import sla kivy.adapters.simplelistadapter
#:import lbl kivy.uix.label
#:import ok __main__
#:import os os

MainView:


<FileListItem>:
    size_hint: 1, None
    height: "30dp"
    Label:
        text: root.filename


<FileList>:
    orientation: "vertical"
    list_view: dir_list
    ListView:
        id: dir_list
        adapter:
            sla.SimpleListAdapter(data=[],
            cls=ok.FileListItem,
            selection_mode="single",
            allow_empty_selection=False)


<MainView>:
    anchor_y: "center"
    wallpaper_dir: wallpaper_dir

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, None
            pos_hint: {"center_x": .5}
            height: "30dp"
            Label:
                text: "Options"
            Button:
                text: "Center"
            Button:
                text: "Fill"
            Button:
                text: "Max"
            Button:
                text: "Scale"
            Button:
                text: "Tile"

        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint: 1, None
                    pos_hint: {"center_x": .5}
                    height: "30dp"
                    spacing: 0
                    TextInput:
                        id: wallpaper_dir
                        hint_text: "wallpaper directory..."
                        text: "/home/leny/System/Wallpapers"
                    Button:
                        text: "browse"
                        size_hint: 0.2, 1
                FileList:

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.5, 1
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Preview"
                        size_hint: 0.2, 0.1
                    Button:
                        canvas:
                            Rectangle:
                                size: self.size
                                pos: self.pos
                                source: 'images/background.jpg'
                    Button:
                        text: "Set"
                        size_hint: 0.2, 0.1
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Current"
                        size_hint: 0.2, 0.1
                    Button:
                        canvas:
                            Rectangle:
                                size: self.size
                                pos: self.pos
                                source: 'images/background.jpg'
        Label:
            size_hint: 1, None
            height: "25dp"
            text: wallpaper_dir.text
