#: kivy 1.7.2
MainView:

<MainView>:
    anchor_y: "center"

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, None
            pos_hint: {"center_x": .5}
            height: "30dp"
            Label:
                text: "Options"
            Button:
                text: "Center"
            Button:
                text: "Fill"
            Button:
                text: "Max"
            Button:
                text: "Scale"
            Button:
                text: "Tile"

        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint: 1, None
                    pos_hint: {"center_x": .5}
                    height: "30dp"
                    spacing: 0
                    TextInput:
                        hint_text: "wallpaper directory..."
                    Button:
                        text: "browse"
                        size_hint: 0.2, 1
                ListView:
                    item_strings: [str(i) for i in range(100)]

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.5, 1
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Preview"
                        size_hint: 0.2, 0.1
                    Button:
                        canvas:
                            Rectangle:
                                size: self.size
                                pos: self.pos
                                source: 'images/background.jpg'
                    Button:
                        text: "Set"
                        size_hint: 0.2, 0.1
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Current"
                        size_hint: 0.2, 0.1
                    Button:
                        canvas:
                            Rectangle:
                                size: self.size
                                pos: self.pos
                                source: 'images/background.jpg'
        Label:
            size_hint: 1, None
            height: "25dp"
            text: "Status"
            color: [0,0,0,1]